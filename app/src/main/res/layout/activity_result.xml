<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textViewResultInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nice work"
        android:textColor="#DD2C00"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textViewResultScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score: 50"
        android:textColor="#DD2C00"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultHighScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultInfo"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textViewResultHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score 200"
        android:textColor="#DD2C00"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnResultPlayAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultScore"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResultPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/button_result_background"
        android:text="Play Again"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>